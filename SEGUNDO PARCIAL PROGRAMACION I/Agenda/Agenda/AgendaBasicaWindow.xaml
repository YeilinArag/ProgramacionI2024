<Window x:Class="Agenda.AgendaBasicaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Agenda"
        mc:Ignorable="d"
        Title="AgendaBasicaWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal" Margin="10">
                <TextBox x:Name="NombreTarea" Width="200" Margin="5" />
                <TextBox x:Name="DescripcionTarea" Width="300" Margin="5" />
                <DatePicker x:Name="FechaTarea" Margin="5"/>
                <Button Content="Agregar Tarea" Click="AgregarTarea" Margin="5" Padding="5"/>
            </StackPanel>
            <ListBox x:Name="ListaTareas" Margin="10" Height="300" />
            <Button Content="Eliminar Tarea" Click="Eliminar Tarea" Margin="10" Padding="5" HorizontalContentAlignment="Right"/>
        </StackPanel>
    </Grid>
</Window>
